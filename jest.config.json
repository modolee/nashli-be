{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".(spec|test).ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^@broadcasts/(.*)$": "<rootDir>/broadcasts/$1",
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@dummies/(.*)$": "<rootDir>/../dummies/$1",
    "^@database/(.*)$": "<rootDir>/database/$1",
    "^@scheduled-tasks/(.*)$": "<rootDir>/scheduled-tasks/$1",
    "^@simple-timelines/(.*)$": "<rootDir>/simple-timelines/$1",
    "^@timelines/(.*)$": "<rootDir>/timelines/$1"
  }
}